@model List<CMS_WebApps.Models.ClaimViewModel>

@{
    var statuses = ViewBag.Statuses as List<string>;
    var selectedStatus = ViewBag.SelectedStatus as string ?? "All";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Bakbak+One&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'SF Pro', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 40px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 1200px;
            margin: 40px auto;
        }

        h1 {
            color: #043873;
            margin-bottom: 20px;
            font-family: 'Bakbak One', sans-serif;
            text-align: center;
        }

        .filter-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        select, input[type="search"], button {
            padding: 10px;
            margin-right: 10px;
            border-radius: 5px;
        }

        button {
            background-color: #086AD9;
            color: white;
            border: none;
            cursor: pointer;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ccc;
        }

        th {
            font-family: 'Bakbak One', sans-serif;
            background-color: #043873;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Claims</h1>

        <!-- Filter Form -->
        <form method="get" action="@Url.Action("Index", "Submission")">
            <div class="filter-container">
                <div>
                    <label for="status">Filter by Status:</label>
                    <select id="status" name="statusFilter">
                        @foreach (var status in statuses)
                        {
                            <option value="@status" selected="@(status == selectedStatus ? "selected" : null)">@status</option>
                        }
                    </select>
                </div>
                <div>
                    <input type="search" id="search" name="searchTerm" placeholder="Search by ID, Name, or Modules" value="@searchTerm" />
                    <button type="submit">Filter</button>
                </div>
            </div>
        </form>

        <!-- Claims Table -->
        <table>
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Date</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Hours</th>
                    <th>Modules</th>
                    <th>Total</th>
                    <th>Document</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.Status</td>
                        <td>@claim.Date1?.ToString("yyyy-MM-dd")</td>
                        <td>@claim.ID</td>
                        <td>@claim.LastName</td>
                        <td>@claim.Hours</td>
                        <td>@claim.Modules</td>
                        <td>@claim.Total.ToString("C")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.Document))
                            {
                                <a href="@claim.Document" target="_blank">View Document</a>
                            }
                            else
                            {
                                <span>No document uploaded</span>
                            }
                        </td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <form method="post" asp-action="UpdateClaimStatus" asp-controller="Submission">
                                    <input type="hidden" name="id" value="@claim.ID" />
                                    <button type="submit" name="status" value="Approved" class="btn-success">Approve</button>
                                    <button type="submit" name="status" value="Rejected" class="btn-danger">Reject</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>