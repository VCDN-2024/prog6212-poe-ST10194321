@{
    ViewData["Title"] = "Home";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Bakbak+One&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'SF Pro', sans-serif;
            background-image: url('/images/wave.svg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            color: #043873;
        }

        .main-text {
            font-family: 'Bakbak One', sans-serif;
            font-size: 128px;
            line-height: 0.9;
            margin: 100px 0 0 100px;
            text-transform: uppercase;
        }

        .background-image {
            position: absolute;
            top: 480px;
            left: 37%;
            transform: translateX(-50%);
            width: 800px;
            height: auto;
            z-index: 0;
        }

        .right-image {
            width: 390px;
            height: auto;
            margin-left: 770px;
            margin-top: -600px;
        }

        .claim-button {
            display: inline-block;
            padding: 15px 30px;
            background-color: #086AD9;
            color: white;
            border: none;
            border-radius: 10px;
            text-decoration: none;
            font-size: 20px;
            margin-top: -900px;
            margin-left: 700px;
            font-family: 'Bakbak One', sans-serif;
        }

            .claim-button:hover {
                background-color: #043873;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="main-text">
            QUICK &<br />
            <span class="highlight">EASY</span><br />
            CLAIM<br />
            SOLUTIONS
        </h1>
        <img src="/images/Element.png" alt="Blue Stroke" class="background-image" />
        <img src="/images/ill.png" alt="Illustration" class="right-image" />
    </div>
    <div style="text-align: center; margin-top: 20px;">

        <a href="@Url.Action("SubmitClaims", "Claims")" class="claim-button">CLAIM HERE</a>
    </div>
</body>
</html>
